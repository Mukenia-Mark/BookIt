<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MyBooksActivity"
  android:background="@drawable/fang">

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/nova_slim"
    android:textColor="@color/SecondaryText"
    android:text="Welcome"
    android:textSize="25sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/myFavouritesText"
    android:layout_width="225dp"
    android:layout_height="41dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="75dp"
    android:background="@drawable/box"
    android:fontFamily="@font/pt_mono"
    android:gravity="center"
    android:text="My Favourites"
    android:textAlignment="center"
    android:textColor="@color/PrimaryText"
    android:textSize="20sp" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/homeNavBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottom_nav_menu"
    android:background="@color/Primary"
    app:itemIconTint="@color/SecondaryText"
    app:itemTextColor="@color/SecondaryText"/>

  <ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    android:layout_marginTop="150dp"/>

</RelativeLayout>